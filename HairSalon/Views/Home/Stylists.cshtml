@{
  Layout = "_Layout";
}

<h1>Stylists:</h1>
@if (@Model.Count == 0)
{
  <h4>No stylists have been added yet!</h4>
}
@foreach (var Stylist in Model)
{
  <h4><li><a href="Stylists/@Stylist.GetId()">@Stylist.GetName()</a></li></h4><br>
}

<form action="/Stylists" method="post">
  <label for="inputStylist">Add Stylist:</label>
  <input name="inputStylist" id="inputStylist" required>
  <button type="submit" class="btn btn-info">Submit</button>
</form>

<form action="/Stylists/Delete" method="post">
    <button type="submit" class="btn btn-danger">Delete All Stylists</button>
</form>

<form action="/">
    <button type="submit" class="btn btn-info">Got To Homepage</button>
</form>